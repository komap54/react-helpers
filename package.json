{
  "name": "@anissoft/react-helpers",
  "publishConfig": {
    "access": "public"
  },
  "version": "1.5.0",
  "description": "",
  "keywords": [],
  "main": "dist/react-helpers.umd.js",
  "module": "dist/react-helpers.es5.js",
  "typings": "dist/types/react-helpers.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "url": "https://github.com/Anissoft/react-helpers"
  },
  "author": "Alexey Anisimov",
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "lint": "tslint --config tslint.json --fix --project tsconfig.json",
    "prebuild": "rimraf dist && rimraf docs",
    "build": "tsc --module commonjs && rollup -c rollup.config.js && typedoc --out docs src/react-helpers.ts --target es6 --excludeNotExported --theme default --mode file --exclude src/utils.ts",
    "start": "rollup -c rollup.config.js -w",
    "test": "jest --coverage --env=jsdom",
    "test:watch": "jest --coverage --watch --env=jsdom",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "deploy-docs": "ts-node tools/gh-pages-publish ",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "postinstall": "npm i ncp && ncp ./dist/lib/ ./",
    "commit": "git-cz",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "{src,test}/**/*.tsx?": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@testing-library/react": "^8.0.4",
    "@testing-library/react-hooks": "^1.0.4",
    "@types/jest": "^24.0.15",
    "@types/lodash": "^4.14.134",
    "@types/node": "^12.0.10",
    "@types/react": "^16.8.20",
    "@types/react-dom": "^16.8.4",
    "@types/react-router": "^5.0.2",
    "colors": "^1.3.3",
    "commitizen": "^3.1.1",
    "coveralls": "^3.0.4",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^2.7.0",
    "jest": "^24.8.0",
    "jest-config": "^24.8.0",
    "jest-dom": "^3.5.0",
    "lint-staged": "^8.2.1",
    "lodash.camelcase": "^4.3.0",
    "marked": "^0.6.3",
    "prettier": "^1.18.2",
    "prompt": "^1.0.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-test-renderer": "^16.8.6",
    "replace-in-file": "^4.1.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.16.3",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.21.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-react": "^4.0.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.5.2"
  },
  "peerDependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-router": "^5.0.1"
  },
  "dependencies": {
    "ncp": "^2.0.0"
  }
}
